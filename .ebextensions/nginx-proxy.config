commands:
  01_install stream_module:
    command: yum install -y nginx-mod-stream.x86_64
  02_update_nginx_conf:
    command: aws s3 cp s3://weave.io.ebs/cluster/nginx.conf /etc/nginx/nginx.conf
  03_create_stream_conf:
    command: cat /etc/nginx/conf.d/elasticbeanstalk-nginx-docker-upstream.conf | sed -e 's/keepalive 256;//' > /etc/nginx/stream.conf
